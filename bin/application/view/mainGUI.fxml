<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.mainGUIControler">
   <children>
      <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: silver;">
         <children>
            <Label alignment="TOP_CENTER" contentDisplay="TOP" text="Vidéothèque" textAlignment="CENTER" textFill="#6400ff" textOverrun="WORD_ELLIPSIS" underline="true">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="502.0" spacing="10.0">
               <children>
                  <Label text="Titre">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <TextField fx:id="tf" prefHeight="25.0" prefWidth="250.0" promptText="Taper le titre ou mot clé avec une Maj" />
                  <Button fx:id="search" mnemonicParsing="false" onAction="#onButtonClick" text="Search" />
                  <Button fx:id="close" mnemonicParsing="false" onAction="#close" text="Fermer" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label fx:id="titre" prefHeight="100.0" prefWidth="503.0" text="titre">
                     <font>
                        <Font name="System Bold Italic" size="14.0" />
                     </font></Label>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
