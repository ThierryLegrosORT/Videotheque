<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.AddViewControler">
   <children>
      <VBox prefHeight="150.0" prefWidth="450.0">
         <children>
            <HBox alignment="CENTER" prefHeight="46.0" prefWidth="450.0" spacing="150.0">
               <children>
                  <Label text="Titre" />
                  <Label alignment="CENTER" text="Genre" />
                  <Label alignment="CENTER_RIGHT" text="Année" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="450.0">
               <children>
                  <TextField fx:id="tfTitre" promptText="titre" />
                  <TextField fx:id="tfGenre" promptText="genre" />
                  <TextField fx:id="tfAnnee" promptText="année" />
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="450.0" spacing="100.0">
               <children>
                  <Button fx:id="valider" mnemonicParsing="false" onAction="#valider" text="Valider" />
                  <Button fx:id="annuler" mnemonicParsing="false" onAction="#annuler" text="Annuler" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
